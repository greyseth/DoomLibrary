<Window x:Class="DoomLibrary.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DoomLibrary"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="LightGray">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="160px"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <StackPanel Background="DarkGray">
            <TextBlock Text="Doom Mod Library" TextWrapping="Wrap" Width="auto" Margin="10"></TextBlock>
            <Border Height="2" HorizontalAlignment="Stretch" Background="CadetBlue" Margin="0 0 0 10" />
            <Border Padding="10">
                <StackPanel>
                    <StackPanel.Resources>
                        <Style TargetType="{x:Type Button}">
                            <Setter Property="Margin" Value="0 0 0 10" />
                        </Style>
                    </StackPanel.Resources>
                    <Button Content="Mods" Click="ToIndex" />
                    <Button Content="WADs" />
                    <Button Content="Mod Collections" />
                    <Button Content="Config" Click="ToConfig" />
                </StackPanel>
            </Border>
        </StackPanel>
        <Frame Name="AppContent" Source="pages/Index.xaml" NavigationUIVisibility="Hidden" Grid.Column="1" />
    </Grid>
</Window>
