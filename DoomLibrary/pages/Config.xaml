<Page x:Class="DoomLibrary.pages.Config"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DoomLibrary.pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Config">

    <Grid Background="LightGray">
        <Border Padding="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <TextBlock Text="Configuration" FontSize="25" FontWeight="Bold" Margin="0 0 0 10" />

                <ScrollViewer Grid.Row="1" Margin="0 0 0 10">
                    <StackPanel>
                        <Grid Margin="0 0 0 10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="10" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="Mods Folder" Margin="0 0 10 0" Grid.Column="0"/>
                                <TextBox Width="Auto" IsReadOnly="True" Text="Not Set" Grid.Column="1" x:Name="display_modsLocation" />
                                <Button Content="..." Padding="5 0 5 0" Grid.Column="2" x:Name="btn_modsLocation" />
                            </Grid>
                            <Grid Grid.Column="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="WADs Folder" Margin="0 0 10 0" Grid.Column="0"/>
                                <TextBox Width="Auto" IsReadOnly="True" Text="Not Set" Grid.Column="1" x:Name="display_wadsLocation" />
                                <Button Content="..." Padding="5 0 5 0" Grid.Column="2" x:Name="btn_wadsLocation" />
                            </Grid>
                        </Grid>

                        <TextBlock Text="Source Ports" FontWeight="Bold" Margin="0 0 0 10" />

                        <Button Content="+ Add Source Port" Margin="0 0 0 10" x:Name="btn_addSourcePort"/>

                        <TextBlock Text="No Source Ports Added" TextAlignment="Center" x:Name="display_noSourcePort" />
                        <ListView x:Name="list_sourcePorts" Background="Transparent" ItemsSource="{Binding SourcePorts}" HorizontalContentAlignment="Stretch">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="0 0 0 10">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBox Width="Auto" IsReadOnly="True" Text="{Binding Path, Mode=OneWay}" Grid.Column="0" />
                                        <Button Content="..." Padding="5 0 5 0" Margin="5 0 0 0" Grid.Column="1" Click="SetSourcePort" />
                                        <Button Content="Remove" Padding="5 0 5 0" Margin="5 0 0 0" Grid.Column="2" Click="RemoveSourcePort" />
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </StackPanel>
                </ScrollViewer>

                <StackPanel Grid.Row="2">
                    <Button Content="Save Settings" x:Name="btn_saveSettings" />
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>
